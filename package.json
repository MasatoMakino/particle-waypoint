{
  "name": "@masatomakino/particle-waypoint",
  "version": "0.6.0",
  "description": "Path module for calculating waypoints.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/particle-waypoint.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@masatomakino/raf-ticker": "^0.5.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "eventemitter3": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "preversion": "git checkout main && git pull && npm ci && npm run test",
    "postversion": "git add package.json package-lock.json && git checkout -b version/$(git describe --tags --abbrev=0)",
    "build": "npm run buildTS && npm run typedocs",
    "buildTS": "tsc --project tsconfig.cjs.json & tsc --project tsconfig.esm.json",
    "typedocs": "typedoc --out ./docs/api src/index.ts",
    "watch:tsc": "tsc -W --incremental --project tsconfig.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/particle-waypoint/issues"
  },
  "homepage": "https://github.com/MasatoMakino/particle-waypoint#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
